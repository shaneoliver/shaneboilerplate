<!doctype html>
<head>
{% block html_head_container %}
    <meta charset="{{site.charset}}" />
    <meta name="description" content="{{ post.preview.read_more(null).length(20) | default(site.description)}}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="pingback" href="{{ site.pingback_url }}" />

    {{ function('wp_head') }}
    {% block head %}{% endblock %}
{% endblock %}
</head>
    <body class="{{ body_class }}" data-template="base.twig" role="document">

        <div id="app">

            {% block header %}
                {% include "layout/header.html.twig" %}
            {% endblock %}

            {% block sidebarleft %}{% endblock sidebarleft %}

            {# Render the content block #}
            {% block content %}
                <main>
                    <article>
                        <h1>{{ post.title }}</h1>
                        <p>{{ post.content }}</p>
                    </article>
                </main>
            {% endblock %}

            {% block sidebarright %}{% endblock sidebarright %}
            
            {% block footer %}
                {% include "layout/footer.html.twig" %}
            {% endblock %}
        </div>

        {{ function('wp_footer') }}
    </body>
</html>
